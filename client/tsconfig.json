{
  "extends": "../tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "outDir": "../dist/client",
    "sourceMap": true,
    "paths": {
      "~/*": ["./*"],
      "shared/*": ["../shared/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "../shared/lib/strings.ts",
    "../shared/lib/timing.ts",
    "../shared/lib/objects.ts",
    "../shared/lib/math.ts",
    "../shared/lib/identity.ts",
    "../shared/lib/arrays.ts"
  ]
}
