{
  "name": "ferry.fyi",
  "version": "2.0.0",
  "engines": {
    "node": "^15.8.0",
    "npm": "^7.5.4"
  },
  "description": "A better tracker for the Washington State Ferry System",
  "scripts": {
    "build:client": "NODE_ENV=production webpack --config client/webpack.config.ts",
    "build:server": "cd server && tsc --build && cp tsconfig.json ../dist/server",
    "client": "NODE_ENV=development webpack --watch --config client/webpack.config.ts",
    "db:reset": "./scripts/resetdb.sh",
    "db:migrate": "nodenv --exec sh scripts/migrate.sh",
    "db:sync": "curl `heroku pg:backups url --app ferry-fyi` > /tmp/ferryfyi.dump && ./scripts/loaddb.sh /tmp/ferryfyi.dump",
    "heroku": "cd dist/server && node -r tsconfig-paths/register server.js",
    "heroku-postbuild": "yarn build:client && yarn build:server",
    "lint": "yarn lint:css && yarn lint:js",
    "lint:css": "stylelint \"**/*.scss\"",
    "lint:css:fix": "yarn lint:css --fix",
    "lint:fix": "yarn lint:css:fix && yarn lint:js:fix",
    "lint:js": "eslint --ext .ts,.tsx client/ server/",
    "lint:js:fix": "yarn lint:js --fix",
    "postinstall": "rm -rf node_modules/.cache/webpack",
    "server": "cd server && ts-node devServer.ts",
    "type-check": "yarn type-check:client && yarn type-check:server",
    "type-check:client": "cd client && tsc --project tsconfig.json --noEmit",
    "type-check:server": "cd client && tsc --project tsconfig.json --noEmit"
  },
  "repository": {
